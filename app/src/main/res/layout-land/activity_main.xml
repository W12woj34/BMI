<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/heightEdit"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/heightText"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:autofillHints="" tools:ignore="LabelFor" tools:targetApi="o"/>
    <TextView
            android:text="@string/BMI_HEIGHT_CM"
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:id="@+id/heightText"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            app:layout_constraintHorizontal_bias="0.018"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/massEdit"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:textSize="18sp"/>
    <TextView
            android:text="@string/BMI_RESULT_TEXT"
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/showInfo"/>
    <ImageView
            android:layout_height="@dimen/BMI_HEIGHT_MATCH"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/run"
            android:layout_marginBottom="@dimen/BMI_MARGIN_BOTTOM"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="1.0"
            android:layout_width="0dp" android:contentDescription="@string/BMI_INFO_PIC"
            app:layout_constraintHorizontal_bias="1.0" android:scaleType="centerCrop"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"
            app:layout_constraintGuide_begin="368dp"/>
    <TextView
            android:text="@string/BMI_MASS_KG"
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:id="@+id/massText"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:textSize="18sp"/>
    <EditText
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/massEdit"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/massText"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:autofillHints="" tools:targetApi="o" tools:ignore="LabelFor"/>
    <Button
            android:text="@string/BMI_BUTTON_COUNT"
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/BMI_MARGIN_START"
            android:id="@+id/countBmi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/heightEdit"/>
    <TextView
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            android:id="@+id/bmiNumberView"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:textSize="42sp"
            app:layout_constraintHorizontal_bias="0.525"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/showInfo"/>
    <TextView
            android:layout_width="@dimen/BMI_WIDTH_MATCH"
            android:layout_height="wrap_content"
            android:id="@+id/bmiDescriptionView"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/bmiNumberView"
            android:layout_marginStart="@dimen/BMI_MARGIN_START"
            android:textSize="26sp"
            app:layout_constraintHorizontal_bias="0.501"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            app:layout_constraintEnd_toStartOf="@+id/showInfo"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_percent="0.5"/>
    <ImageButton
            android:layout_width="@dimen/BMI_HEIGHT_MATCH"
            android:layout_height="@dimen/BMI_HEIGHT_MATCH"
            app:srcCompat="@drawable/arrow"
            android:id="@+id/showInfo"
            android:layout_marginTop="@dimen/BMI_MARGIN_TOP"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginBottom="@dimen/BMI_MARGIN_BOTTOM"
            app:layout_constraintBottom_toTopOf="@+id/bmiDescriptionView"
            tools:srcCompat="@drawable/arrow"
            app:layout_constraintVertical_bias="1.0"
            android:visibility="invisible"
            android:contentDescription="@string/BMI_SHOW_INFO_DESC"
            android:cropToPadding="false"
            android:duplicateParentState="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/BMI_MARGIN_END"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/guideline6" android:background="@android:color/transparent"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.88"/>
</android.support.constraint.ConstraintLayout>